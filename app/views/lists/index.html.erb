<div style="text-align: center;">
  <h1>All Lists</h1>
  <%= link_to 'New List', new_list_path, class: "btn btn-primary" %>
</div>
<div class="container ">

    <% @lists.each do |list| %>
      <div class="container">
        <%= link_to list.name, list_path(list) %>
      </div>
      <div class="container ">
        <%= cl_image_tag list.photo.key, height: 400, width: 300, crop: :fill %>
      </div>
      <div class="container">
        <%= link_to 'Delete', list_path(list), data: { turbo_method: :delete, turbo_confirm: 'Are you sure?' }, class: "btn btn-danger" %>
      </div>
    <% end %>

</div>
