<!-- Listas Generos Peliculas -->
<div class="conteiner  m-4 mb-5" style="text-align: center;">
  <h1>Generos de Peliculas</h1>
  <%= link_to 'New List Movie Genres', new_list_path, class: "btn btn-primary" %>
</div>

  <div class="row m-3">
    <% @lists.each do |list| %>
      <div class="col-12 col-lg-3 ">
        <div class="card  bg-light">
          <%= cl_image_tag list.photo.key, height: 400, width: 300, crop: :fill, class: "card-img-top" %>
          <div class="card-body d-flex flex-column justify-content-center align-items-center ">
            <h5 class="card-title"><%= link_to list.name, list_path(list) %></h5>
            <%= link_to 'Delete', list_path(list), data: { turbo_method: :delete, turbo_confirm: 'Are you sure?' }, class: "btn btn-danger bi bi-trash3" %>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>
